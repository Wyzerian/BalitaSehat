<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tvNamaAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balita Sehat"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediksi Stunting Balita Sehat"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <!-- LOGO -->
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_balita_logo"
                android:layout_marginBottom="12dp"/>

            <!-- CARD DATA ANAK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="B"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@drawable/bg_circle_green"/>

                    <TextView
                        android:id="@+id/tvNamaCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budi Utomo"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvBB"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Berat Badan (kg)"
                        android:textColor="#000000"
                        android:background="@drawable/bg_chip"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvTB"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tinggi Badan (cm)"
                        android:textColor="#000000"
                        android:background="@drawable/bg_chip"/>
                </LinearLayout>
            </LinearLayout>

            <!-- GRAFIK PREVIEW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:orientation="vertical">

                <!-- Judul -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Pemeriksaan"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp"/>

                <!-- ===== Pemeriksaan Terakhir ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/tvLastDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal: 23-12-2025"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/tvLastDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umur: 16 bln | TB: 85 cm | BB: 10 kg"
                        android:textColor="#444444"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvLastStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Normal"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- ===== Grafik Pertumbuhan Tinggi Badan ===== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grafik Pertumbuhan Tinggi Badan"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="6dp"/>

                <!-- Bisa ImageView dulu / LineChart nanti -->
                <ImageView
                    android:id="@+id/imgChartTB"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/img_dummy_chart"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"/>

                <!-- ===== Grafik Pertumbuhan Berat Badan ===== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grafik Pertumbuhan Berat Badan"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="6dp"/>

                <ImageView
                    android:id="@+id/imgChartBB"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/img_dummy_chart"
                    android:scaleType="centerCrop"/>

            </LinearLayout>


            <!-- MENU -->
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ \nHome"/>

        <TextView
            android:id="@+id/navInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="âž•\nInput Data"/>

        <TextView
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="â±ï¸\nRiwayat"/>
    </LinearLayout>

</LinearLayout>
