<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tvNamaAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balita Sehat"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Prediksi Stunting Balita Sehat"
                android:textColor="#666666"
                android:textSize="12sp" />

            <!-- LOGO -->
            <!-- CARD DATA ANAK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tvAvatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle_green"
                        android:padding="8dp"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile Picture" />

                    <TextView
                        android:id="@+id/tvNamaCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Budi Utomo"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBB"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_chip"
                        android:gravity="center"
                        android:text="Berat Badan (kg)"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvTB"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_chip"
                        android:gravity="center"
                        android:text="Tinggi Badan (cm)"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- GRAFIK PREVIEW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Judul -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Riwayat Pemeriksaan"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <!-- ===== Pemeriksaan Terakhir ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvLastDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal: 23-12-2025"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLastDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Umur: 16 bln | TB: 85 cm | BB: 10 kg"
                        android:textColor="#444444" />

                    <TextView
                        android:id="@+id/tvLastStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Status: Normal"
                        android:textColor="#2E7D32"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ===== Grafik Pertumbuhan Tinggi Badan ===== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Grafik Z-Score"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <!-- Bisa ImageView dulu / LineChart nanti -->
                <ImageView
                    android:id="@+id/imgChartTB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_dummy_chart" />

                <!-- ===== Grafik Pertumbuhan Berat Badan ===== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Grafik Pertumbuhan"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgChartBB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_dummy_chart" />

            </LinearLayout>


            <!-- MENU -->
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/navLogout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:text="ðŸšª\nLogout"/>

        <TextView
            android:id="@+id/navInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:text="âž•\nInput Data"/>

        <TextView
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#09436F"
            android:textStyle="bold"
            android:gravity="center"
            android:text="â±ï¸\nRiwayat"/>
    </LinearLayout>

</LinearLayout>
