<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Data Anak"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Nama Anak -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anak"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Masukkan Nama Anak"
            android:background="@drawable/bg_input_rounded"
            android:padding="14dp"
            android:enabled="false"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Umur (bulan) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umur (bulan)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etUmur"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Umur otomatis (bulan)"
            android:background="@drawable/bg_input_rounded"
            android:padding="14dp"
            android:enabled="false"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Jenis Kelamin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/rbLaki"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Laki-laki"
                android:background="@drawable/bg_radio_rounded"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="10dp"
                android:button="@null"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/rbPerempuan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Perempuan"
                android:background="@drawable/bg_radio_rounded"
                android:textColor="#000000"
                android:textStyle="bold"
                android:padding="10dp"
                android:button="@null"
                android:gravity="center" />
        </RadioGroup>

        <!-- Tinggi Badan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan (cm)"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etTinggi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="contoh: 75.5"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_input_rounded"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <!-- Berat Badan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Badan (kg)"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etBerat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="contoh: 10"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_input_rounded"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:padding="14dp"
            android:layout_marginBottom="30dp" />

        <!-- Tombol -->
        <Button
            android:id="@+id/btnProses"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Analisis Sekarang"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_primary" />

    </LinearLayout>
</ScrollView>
