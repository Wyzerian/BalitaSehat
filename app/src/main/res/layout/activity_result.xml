<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ===== HEADER ===== -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Kembali"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Analisis"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <!-- ===== INFO ANAK ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvNamaAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Anak"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvUmur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur : 0 bulan"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTinggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tinggi : 0 cm"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvBerat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat : 0 kg"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTanggalInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Input : -"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- ===== STATUS ===== -->
        <LinearLayout
            android:id="@+id/layoutStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_warning"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Gizi"
                android:textStyle="bold"
                android:textColor="@color/red_status"/>

            <TextView
                android:id="@+id/tvZScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z-Score"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- ===== GRAFIK Z-SCORE ===== -->
        <TextView
            android:text="Grafik Z-Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"/>

        <ImageView
            android:id="@+id/imgZscoreChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Grafik Z-Score"/>


        <!-- ===== GRAFIK PERTUMBUHAN ===== -->
        <TextView
            android:text="Grafik Pertumbuhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="6dp"/>

        <ImageView
            android:id="@+id/imgGrowthChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="12dp"
            android:contentDescription="Grafik Pertumbuhan"/>


    </LinearLayout>
</ScrollView>
