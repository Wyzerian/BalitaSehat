<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- ===================== -->
        <!-- Z-SCORE TB/U -->
        <!-- ===================== -->
        <TextView
            android:id="@+id/tvTitleZTb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grafik Z-Score Tinggi Badan menurut Umur (TB/U)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartTb"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <!-- ===================== -->
        <!-- Z-SCORE BB/U -->
        <!-- ===================== -->
        <TextView
            android:id="@+id/tvTitleZBb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grafik Z-Score Berat Badan menurut Umur (BB/U)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartBb"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <!-- ===================== -->
        <!-- GROWTH TB -->
        <!-- ===================== -->
        <TextView
            android:id="@+id/tvTitleGrowthTb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grafik Pertumbuhan Tinggi Badan (TB/U)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartGrowthTB"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <!-- ===================== -->
        <!-- GROWTH BB -->
        <!-- ===================== -->
        <TextView
            android:id="@+id/tvTitleGrowthBb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grafik Pertumbuhan Berat Badan (BB/U)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartGrowthBB"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


    </LinearLayout>
</ScrollView>
